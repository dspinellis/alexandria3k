"""
Convenience module for running the CLI when developing.
In production the equivalent CLI is setup through the [project.scripts]
entry in the pyproject.toml file.
"""

import sys
import os

current_file = os.path.realpath(__file__)
bin_directory = os.path.dirname(current_file)

sys.path.append(f"{bin_directory}/../src")
from alexandria3k.__main__ import main

sys.exit(main())
